<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.romain.velobleu.AffichageStation">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:src="@drawable/velo_bleu"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="New Text"
        android:id="@+id/TV_Station_Resume"
        android:textSize="30dp"
        android:textColor="#ff7e91ff"
        android:textAlignment="center"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/TV_Adresse_Resume"
        android:layout_alignStart="@+id/TV_Adresse_Resume"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="New Text"
        android:id="@+id/TV_Adresse_Resume"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_below="@+id/TV_Station_Resume"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="135dp"
        android:layout_height="30dp"
        android:text="Capacité totale :"
        android:id="@+id/textView3"
        android:textSize="15dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="166dp"
        android:layout_height="30dp"
        android:text="Capacité disponible :"
        android:id="@+id/textView4"
        android:textSize="15dp"
        android:layout_below="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:layout_width="159dp"
        android:layout_height="30dp"
        android:text="Places disponibles :"
        android:id="@+id/textView5"
        android:textSize="15dp"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Velos disponibles :"
        android:id="@+id/textView6"
        android:textSize="15dp"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:id="@+id/TV_CapDisp_Resume"
        android:textSize="15dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/TV_CapTot_Resume"
        android:layout_alignStart="@+id/TV_CapTot_Resume"
        android:textAlignment="textEnd"
        android:gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:id="@+id/TV_Velo_Resume"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/TV_CapDisp_Resume"
        android:layout_alignStart="@+id/TV_CapDisp_Resume"
        android:gravity="right"
        android:textSize="15dp"
        android:textAlignment="textEnd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:id="@+id/TV_Places_Resume"
        android:gravity="right"
        android:textSize="15dp"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/TV_CapDisp_Resume"
        android:layout_alignStart="@+id/TV_CapDisp_Resume"
        android:textAlignment="textEnd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:id="@+id/TV_CapTot_Resume"
        android:textSize="15dp"
        android:textAlignment="textEnd"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:gravity="right" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voir sur la carte"
        android:id="@+id/button"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:onClick="StartMap"/>
</RelativeLayout>
